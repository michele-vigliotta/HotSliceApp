<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageViewProdotto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pizza_foto"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"/>

    <!-- LinearLayout per Nome Prodotto e Prezzo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- TextView Nome Prodotto -->
        <TextView
            android:id="@+id/textViewNomeProdotto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Prodotto"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <!-- TextView Prezzo -->
        <TextView
            android:id="@+id/textViewPrezzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Prezzo"
            android:textAlignment="center"

            />

    </LinearLayout>

    <!-- Button Minus -->
    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="-"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_button"
        android:layout_gravity="center_vertical"/>

    <!-- TextView Quantita -->
    <TextView
        android:id="@+id/textViewQuantitaProdotto"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"/>

    <!-- Button Plus -->
    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_button"
        android:layout_gravity="center_vertical"/>

</LinearLayout>