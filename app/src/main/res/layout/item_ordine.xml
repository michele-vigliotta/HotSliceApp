<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ordine in data:"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descrizioneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrizione: ..."
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/totaleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Totale: ..."
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tipoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="Tipo: Ordine al tavolo/d'asporto" />

        <TextView
            android:id="@+id/tavoloOrarioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="Tavolo: /Ora di ritiro:" />

        <TextView
            android:id="@+id/nomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="Nome:" />

        <TextView
            android:id="@+id/telefonoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:text="Telefono:" />

        <TextView
            android:id="@+id/statoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stato"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
